<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="CustomTabLayout" parent="Widget.Design.TabLayout">
        <item name="tabIndicator">@drawable/round_back_white_border</item>
        <item name="tabIndicatorColor">@color/white</item>
        <item name="tabIndicatorGravity">stretch</item>
        <item name="android:background">@drawable/round_back_white</item>
        <item name="tabIconTint">@color/tab_selector</item>
        <item name="android:adjustViewBounds">true</item>
        <item name="tabSelectedTextColor">@color/tab_selected</item>
    </style>
    <style name="TabLayoutTextStyle">
        <item name="android:textColor">@color/tab_not_selected</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:fontFamily">@font/alatsi</item>
    </style>
    <style name="CustomTextViewTitle" parent="Widget.MaterialComponents.TextView">
        <item name="android:textSize">24sp</item>
        <item name="android:fontFamily">@font/montserrat_medium</item>
        <item name="android:textAlignment">textStart</item>
        <item name="android:textStyle">normal</item>
        <item name="android:textColor">@color/card_text</item>
        <item name="android:autoSizeTextType">uniform</item>
        <item name="android:maxLines">1</item>
    </style>
    <style name="CustomTextViewSubTitle" parent="Widget.MaterialComponents.TextView">
        <item name="android:textSize">16sp</item>
        <item name="android:fontFamily">@font/montserrat</item>
        <item name="android:textAlignment">textStart</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/card_text</item>
        <item name="drawableTint">@color/card_text</item>
    </style>
    <style name="CustomTextViewSummaryText" parent="Widget.MaterialComponents.TextView">
        <item name="android:textSize">14sp</item>
        <item name="android:fontFamily">@font/montserrat</item>
        <item name="android:textAlignment">textStart</item>
        <item name="android:textStyle">normal</item>
        <item name="android:textColor">@color/card_text</item>
        <item name="android:maxLines">4</item>
        <item name="android:ellipsize">end</item>
        <item name="android:background">@drawable/text_bg</item>
    </style>
    <style name="CustomTextViewLargeText" parent="Widget.MaterialComponents.TextView">
        <item name="android:textSize">14sp</item>
        <item name="android:fontFamily">@font/montserrat</item>
        <item name="android:textAlignment">textStart</item>
        <item name="android:textStyle">normal</item>
        <item name="android:textColor">@color/card_text</item>
    </style>
    <style name="CustomTextViewSectionTitle" parent="Widget.MaterialComponents.TextView">
        <item name="android:textSize">20sp</item>
        <item name="android:fontFamily">@font/alatsi</item>
        <item name="android:textAlignment">textStart</item>
        <item name="android:textStyle">normal</item>
        <item name="android:textColor">@color/card_text</item>
        <item name="android:paddingStart">10dp</item>
    </style>
    <style name="CustomTextViewDescriptionText" parent="Widget.MaterialComponents.TextView">
        <item name="android:textSize">14sp</item>
        <item name="android:fontFamily">@font/montserrat</item>
        <item name="android:textAlignment">textStart</item>
        <item name="android:textStyle">normal</item>
        <item name="android:textColor">@color/card_text</item>
        <item name="android:background">@drawable/text_bg</item>
    </style>
    <style name="CustomTextViewAuthorsText" parent="Widget.MaterialComponents.TextView">
        <item name="android:textSize">16sp</item>
        <item name="android:fontFamily">@font/montserrat_alternates_medium</item>
        <item name="android:textAlignment">center</item>
        <item name="android:textColor">@color/card_text</item>
        <item name="android:layout_marginStart">16dp</item>
        <item name="android:drawableStart">@drawable/authors_icon</item>
        <item name="android:drawableTint">@color/card_text</item>
        <item name="android:maxLines">1</item>
        <item name="android:autoSizeTextType">uniform</item>
    </style>
    <style name="CustomPrimaryButton" parent="Widget.MaterialComponents.Button">
        <item name="android:fontFamily">@font/montserrat_medium</item>
        <item name="shapeAppearanceOverlay">@style/ShapeAppearanceOverlay.Button</item>
        <item name="android:elevation">0dp</item>
        <item name="android:stateListAnimator">@null</item>
        <item name="textAllCaps">false</item>
        <item name="backgroundTint">@color/button_primary</item>
    </style>
    <style name="CustomSecondaryButton" parent="Widget.MaterialComponents.Button.OutlinedButton">
        <item name="android:fontFamily">@font/montserrat_medium</item>
        <item name="shapeAppearanceOverlay">@style/ShapeAppearanceOverlay.Button</item>
        <item name="android:textColor">@color/card_text</item>
        <item name="android:elevation">0dp</item>
        <item name="android:stateListAnimator">@null</item>
        <item name="backgroundTint">@color/card_background</item>
        <item name="textAllCaps">false</item>
        <item name="strokeWidth">2dp</item>
    </style>
    <style name="ShapeAppearanceOverlay.Button" parent="ShapeAppearance.MaterialComponents.SmallComponent">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">20dp</item>
        <item name="android:paddingLeft">24dp</item>
        <item name="android:paddingRight">24dp</item>
    </style>
    <style name="CustomRecyclerView" parent="Widget.AppCompat.ListView">
        <item name="android:paddingLeft">8dp</item>
        <item name="android:paddingRight">8dp</item>
        <item name="android:paddingBottom">16dp</item>
        <item name="android:clipToPadding">false</item>
    </style>
</resources>