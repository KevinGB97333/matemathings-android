<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.MatemaThings" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/title_background</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/fragment_background</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">@color/title_background</item>
        <!-- Customize your theme here. -->
        <item name="android:textViewStyle">@style/RobotTextViewStyle</item>
        <item name="android:buttonStyle">@style/RobotoButtonStyle</item>
    </style>
    <style name="RobotTextViewStyle" parent="android:Widget.TextView">
        <item name="android:fontFamily">@font/roboto_medium</item>
    </style>
    <style name="RobotoButtonStyle" parent="android:Widget.Button">
        <item name="android:fontFamily">@font/roboto_medium</item>
    </style>
</resources>