<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">
    <data>
        <variable
            name="videoViewModel"
            type="es.upm.tfg.matemathings.viewmodels.VideoViewModel"/>
        <variable
            name="conceptsViewModel"
            type="es.upm.tfg.matemathings.viewmodels.ConceptsViewModel"/>
    </data>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <RelativeLayout
            android:id="@+id/loading_layout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="10dp"
            android:layout_centerInParent="true"
            android:background="@drawable/loading_bg"
            android:elevation="8dp"
            android:visibility="gone"
            conceptsApiStatus="@{conceptsViewModel.conceptsGetStatus}"
            tools:visibility="visible">
            <ProgressBar
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:indeterminateTint="@color/grey_background"/>
        </RelativeLayout>
    <androidx.core.widget.NestedScrollView
        android:importantForAccessibility="no"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
            <androidx.recyclerview.widget.RecyclerView
                android:importantForAccessibility="no"
                android:id="@+id/nature_list"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                style="@style/CustomRecyclerView"
                app:layoutManager="androidx.recyclerview.widget.GridLayoutManager"
                app:spanCount="1"
                listConcepts="@{conceptsViewModel.natureConcepts}"
                tools:listitem="@layout/list_item"/>
    </androidx.core.widget.NestedScrollView>
    </RelativeLayout>
</layout>